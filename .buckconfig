[project]
  read_only_paths = [/usr/bin/ld]

[cache]
  mode = dir

[cxx#macosx-x86_64]
  toolchain_target = //:muffin_toolchain

[cxx]
  default_platform = macosx-x86_64
  cflags = -g -std=c11
  cxxflags = -g -std=c++2a

[android]
  sdk_path = /opt/android/sdk_D23134735/
  target = Google Inc.:Google APIs:23

[cxx#android-armv7]
  toolchain_target = //:muffin_toolchain

[ndk]
  app_platform = android-21
  compiler = clang
  cxx_runtime = libcxx
  toolchain_target_per_cpu_abi = \
    arm64=>//mdk, \
    armv7=>//mdk
  ndk_target_per_cpu_abi = \
    armv7=>//mdk
  ndk_target = //mdk
  #ndk_path = /opt/android_ndk/r17fb2
  #ndk_version = 17.2
